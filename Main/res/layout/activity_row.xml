<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:orientation="horizontal" android:layout_height="wrap_content">
    <ImageView android:src="@drawable/icon" android:layout_height="@dimen/avatarSize" android:layout_width="@dimen/avatarSize" android:id="@+id/avatarImage"></ImageView>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:textStyle="bold" android:layout_height="wrap_content" android:text="TextView" android:layout_width="wrap_content" android:id="@+id/nameTextView"></TextView>
        <TextView android:layout_height="wrap_content" android:text="TextView" android:id="@+id/bodyTextView" android:layout_width="wrap_content"></TextView>
        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:textStyle="bold" android:layout_height="wrap_content" android:text="TextView" android:layout_width="wrap_content" android:id="@+id/dateTextView"></TextView>
    </LinearLayout>
    
</LinearLayout>
