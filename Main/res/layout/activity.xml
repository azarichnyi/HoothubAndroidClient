<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="match_parent">
        <ImageView android:src="@drawable/icon" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/avatarImage"></ImageView>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="match_parent" android:layout_width="wrap_content" android:orientation="vertical">
            <TextView android:layout_height="wrap_content" android:text="TextView" android:id="@+id/nameTextView" android:layout_width="wrap_content" android:textStyle="bold"></TextView>
            <TextView android:layout_height="wrap_content" android:text="TextView" android:id="@+id/dateTextView" android:layout_width="wrap_content" android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView android:layout_height="wrap_content" android:text="TextView" android:layout_width="match_parent" android:id="@+id/bodyTextView" android:ellipsize="none"></TextView>
    
</LinearLayout>
